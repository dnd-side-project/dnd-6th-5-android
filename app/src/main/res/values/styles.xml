    <!--  Material Button  -->
    <style name="MaterialButton.Bold.16" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/suit_bold</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">14dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!--  Chip Button  -->
    <style name="Chip.Regular.14" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/selector_chip_background_color</item>
        <item name="fontFamily">@font/suit_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">21sp</item>
        <item name= "chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/selector_chip_text_color</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipStrokeColor">@color/selector_chip_stroke_tint</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="chipEndPadding">0dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="textEndPadding">24dp</item>
        <item name="textStartPadding">24dp</item>
    </style>

    <!--  BottomDialog  -->
    <style name="BottomDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>

        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--  TabLayout  -->
    <style name="TabLayout">
        <item name="tabIndicatorColor">@color/gray06</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/TextView.Heading.Bold.14</item>
        <item name="tabSelectedTextColor">@color/gray06</item>
        <item name="tabTextColor">@color/gray04</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>
